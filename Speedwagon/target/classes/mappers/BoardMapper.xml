<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.hong.mappers.BoardMapper">

	<!-- 게시판 전체 불러오기 -->
	<select id="board_listAll" resultType="BoardDTO">
		select *
		from board
	</select>

	<!-- 게시물 상세보기 -->
	<select id="board_detail" resultType="BoardDTO">
		select * from board
		where num = #{num}
	</select>

	<!-- 게시물 작성 -->
	<insert id="board_write" parameterType="BoardDTO">
		insert into board (title, content, writer, date,
		category, member_id)
		values(#{title}, #{content}, #{writer}, #{date},
		#{category}, #{member_id})
	</insert>

	<!-- 게시물 수정 -->
	<update id="board_update">
		update board set title = #{title}, content =
		#{content}
		where num = #{num}
	</update>

	<!-- 게시물 삭제 -->
	<delete id="board_delete">
		delete from board where num = #{num}
	</delete>

</mapper>